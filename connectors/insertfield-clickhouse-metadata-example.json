{
  "name": "insertfield-clickhouse-metadata-example",
  "config": {
    "tasks.max": "1",
    "connector.class": "com.clickhouse.kafka.connect.ClickHouseSinkConnector",
    "topics": "example_topic",
    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "true",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "true",
    "transforms": "insertMetadata",
    "transforms.insertMetadata.type": "com.tuyndv.kafka.smt.InsertField$Value",
    "transforms.insertMetadata.topic.field": "kafka_topic",
    "transforms.insertMetadata.partition.field": "kafka_partition",
    "transforms.insertMetadata.offset.field": "kafka_offset",
    "transforms.insertMetadata.timestamp.field": "kafka_timestamp",
    "hostname": "your-clickhouse-host",
    "port": "8123",
    "database": "your_database",
    "username": "your_username",
    "password": "**************************",
    "ssl": "false",
    "exactlyOnce": "false"
  }
}

